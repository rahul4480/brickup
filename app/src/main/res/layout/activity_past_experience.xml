<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PastExperience">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/past_exp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"

    />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"

    android:layout_marginTop="150dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="15dp"

    android:shadowColor="#000"
    android:shadowDx="30"
    android:shadowDy="30"
    android:shadowRadius="50"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILL YOUR ADDRESS"
        android:textColor="#373737"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter the address"
        android:textColor="#9C9C9C"
        android:textColorHint="#9C9C9C"
        android:layout_marginBottom="20dp"
        android:textSize="14dp"
        android:id="@+id/address"
        />


</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"

        android:layout_marginTop="270dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="15dp"

        android:shadowColor="#000"
        android:shadowDx="30"
        android:shadowDy="30"
        android:shadowRadius="50"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BANK INFO OF TRANSACTION"
            android:textColor="#373737"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter the cost in Bill"
            android:textColor="#9C9C9C"
            android:textColorHint="#9C9C9C"
            android:layout_marginBottom="20dp"
            android:textSize="14dp"
            android:id="@+id/cost"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"

        android:layout_marginTop="390dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="15dp"

        android:shadowColor="#000"
        android:shadowDx="30"
        android:shadowDy="30"
        android:shadowRadius="50"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BANK INFO OF TRANSACTION"
            android:textColor="#373737"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_pirates"
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Standard (within 5 years)"
           android:textColor="#9C9C9C"
            />
        <RadioButton android:id="@+id/radio_ninjas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Express (within 2 year)"
            android:textColor="#9C9C9C"
            />
            <RadioButton android:id="@+id/radi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Premium (within 1 year)"
                android:textColor="#9C9C9C"

                android:layout_marginBottom="20dp"
                />
    </RadioGroup>

    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/save"
        android:background="@null"
        android:layout_above="@+id/confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/savebutton"

        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#FF5F55"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="C O N F I R M"
    android:paddingTop="20dp"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="20dp"
    />

    </android.support.v7.widget.CardView>

</RelativeLayout>