<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Profile">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/jobss"
        android:id="@+id/jobss"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offer your BID"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/offerbidtxt"
        android:layout_below="@+id/jobss"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/offerbidtxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/circular_image"
                android:id="@+id/circular_image"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/basicinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circular_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Hi! My name is Romi Rahul,"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/basicinfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basicinfo"
                android:layout_centerHorizontal="true"
                android:text="I want a fully furnished house."
                android:textColor="@android:color/black" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_btn"
                android:background="@null"
                android:layout_below="@+id/basicinfo"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_home"
                />

            <EditText
                android:layout_width="180dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_home"
                android:id="@+id/bidvalue"
                android:layout_marginTop="5dp"
                android:hint="Enter your bid value"
                android:textColor="#9F9F9F"
                android:textColorHint="#9F9F9F"
                android:textAlignment="center"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/place_bid"
                android:background="@null"

                android:layout_below="@+id/view_home"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"

                android:id="@+id/placebid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Specs"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/house_specs"
                android:textSize="26sp"
                android:layout_below="@+id/placebid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fetchtext"
                android:layout_below="@+id/house_specs"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:text="Length - 1600 sq ft\nWidth - 2500 sq ft \n3 BHK"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>